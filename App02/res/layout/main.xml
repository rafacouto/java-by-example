<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnCall"
            android:id="@+id/btnCall" android:layout_centerVertical="true"
            android:layout_gravity="center" android:onClick="llamarDestinatario" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btnTest"
            android:id="@+id/btnTest" android:layout_gravity="center"
            android:layout_below="@+id/btnCall" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>

